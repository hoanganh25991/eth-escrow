{
  "name": "eth-escrow",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "node": ">= 8.11.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hoanganh25991/eth-escrow"
  },
  "scripts": {
    "start": "yarn build && pm2 start pm2-config.json",
    "dev": "node -r @babel/register src/daemon.js",
    "build": "babel src --out-dir=dist",
    "collect": "cross-env NODE_PATH=src yarn call src/commands/index.js collect",
    "format": "lint-staged",
    "call": "node -r @babel/register",
    "test": "cross-env NODE_PATH=src jest",
    "test:contracts": "yarn call scripts/test-contracts.js",
    "deploy": "yarn call scripts/deploy-contracts.js",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "bip39": "^2.5.0",
    "chalk": "^2.4.1",
    "commander": "^2.16.0",
    "compose-funcs": "^1.0.0",
    "cross-env": "^5.2.0",
    "ethereumjs-tx": "^1.3.5",
    "ethers": "^3.0.24",
    "moment": "^2.22.2",
    "redux": "^4.0.0",
    "truffle": "^4.1.13",
    "truffle-hdwallet-provider": "^0.0.5",
    "web3": "^1.0.0-beta.34"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.47",
    "@babel/core": "^7.0.0-beta.47",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.47",
    "@babel/register": "^7.0.0-beta.47",
    "babel-7-jest": "^21.3.3",
    "babel-core": "^7.0.0-0-beta.47",
    "babel-eslint": "^8.2.5",
    "babel-plugin-module-resolver": "^3.1.1",
    "coveralls": "^3.0.2",
    "cross-spawn": "^6.0.5",
    "eslint": "^4.18.2",
    "husky": "^0.13.4",
    "jest": "^23.1.0",
    "lint-staged": "^4.0.0",
    "prettier": "^1.4.4"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8.11"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ]
        }
      ]
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote --print-width 120",
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es6": true,
      "jest": true,
      "jasmine": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "rules": {
      "indent": [
        "warn",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "quotes": [
        "warn",
        "single"
      ],
      "semi": [
        "warn",
        "always"
      ],
      "no-var": [
        "warn"
      ],
      "no-console": [
        "off"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-mixed-spaces-and-tabs": [
        "warn"
      ]
    },
    "globals": {
      "artifacts": true,
      "contract": true,
      "assert": true
    }
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-7-jest"
    },
    "verbose": true,
    "testPathIgnorePatterns": [
      "test-cases.js$",
      "__tests__/manual/.*.js$",
      "__tests__/.*.mock.js$",
      "(/)?dist/.*.js$"
    ]
  }
}
